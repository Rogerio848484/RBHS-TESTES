<theme>
   <formatVersion>7</formatVersion>

<view name="system">

<video name="background_video" extra="true">
<pos>0 0</pos>
<size>1 1</size>
<path>./VIDEOS/${system.theme}.mp4</path>
<zIndex>1</zIndex>
<storyboard repeat="forever" >
<animation property="scale" begin="0" from="1" to="1.1" duration="5000" mode="linear" autoreverse="true"/>
</storyboard>
</video>

<video name="background_video_2" extra="true">
<pos>0.17 0.76</pos>
<origin>0.5 0.5</origin>
<maxSize>0.30 0.30</maxSize>
<path>./VIDEOS/${system.theme}.mp4</path>
<delay>2</delay>
<zIndex>3</zIndex>
<storyboard>
<animation property="rotation" from="360" begin="0" duration="1000" mode="linear"/>
<animation property="scale" begin="0" from="0" to="1" duration="1000" mode="linear"/>
</storyboard>   
</video>

</view>

</theme>